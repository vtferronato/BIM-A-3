import math

n = float(input("Enter the number of polygon points: "))

xlist = [] #insert number data in the table 
ylist = [] #insert number data in the table

print("Enter x and y coordinates for polygon points:")

i = 1.0
while i < (n+1):
    xlist.append(float(input(f"x{i:<2.0f}: "))) #type number data and insert on the table for x values
    ylist.append(float(input(f"y{i:<2.0f}: "))) #type number data and insert on the table for y values
    i = i + 1 # table creation

print(f"{'Point':<7} {'x':<7} {'y':<7}")

print("-" * 20) #table separation line 

for t in range(0,int(n)):
    print(f"{t+1:<6} {xlist[t]:<7.2f} {ylist[t]:<7.2f}") #table creation

#Geometric characteristics:
print("Geometric characteristics:")
